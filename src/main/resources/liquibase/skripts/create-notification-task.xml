<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog-4.9.xsd">
<changeSet id="create-notification-task-table.1" author="Elena Ermolaeva">
    <preConditions>
        <not>
            <tableExists tableName="notification_task"/>
        </not>
    </preConditions>
    <createTable tableName="notification_task">
        <column name="id" autoIncrement="true" type="BIGINT">
         <constraints primaryKey="true"/>
        </column>
        <column name="text" type="VARCHAR(4096)">
        <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="chat_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="data_time" type="DATETIME(6)">
            <constraints nullable="false"/>
        </column>
    </createTable>
    <createIndex tableName="notification_task" indexName="IDX_NOTIFICATION_TASKS_DATE_TIME">
        <column name="data_time"/>
    </createIndex>
</changeSet>
    </databaseChangeLog>